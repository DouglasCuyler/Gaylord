<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".WebActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/meetingplaymark" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/abc_dialog_padding_material"
        android:layout_marginRight="@dimen/abc_dialog_padding_material"
        android:layout_below="@+id/imageView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#256c9b"
            android:text="Login to View Your App Preview"
            android:textSize="@dimen/abc_text_size_menu_material"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/abc_dialog_padding_material"
            />

        <View
            android:layout_width="158dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/abc_dialog_padding_material"
            android:background="#898989" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/abc_dialog_padding_material">

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_top_bg"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:hint="Email Address"
                android:textColorHint="#898989"
                android:drawableLeft="@drawable/email"
                android:drawableRight="@drawable/help"
                android:textColor="#000000"
                android:singleLine="true"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/btHelp1"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="#00000000"
                android:alpha="0" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="-2dp">

            <EditText
                android:id="@+id/etAppCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_bottom_bg"
                android:padding="13dp"
                android:drawablePadding="15dp"
                android:hint="App Preview Code"
                android:textColorHint="#898989"
                android:drawableLeft="@drawable/phone"
                android:drawableRight="@drawable/help"
                android:textColor="#000000"
                android:singleLine="true"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/btHelp2"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="#00ffffff" />

        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preview Your App"
            android:textAllCaps="false"
            android:id="@+id/btYourApp"
            android:layout_marginTop="@dimen/abc_dialog_padding_material"
            android:textStyle="bold"
            android:background="#256c9b"
            android:textSize="@dimen/abc_text_size_medium_material" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:id="@+id/imagedottedbar"
            android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
            android:background="@drawable/dottedbar" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan a QR code"
            android:textAllCaps="false"
            android:id="@+id/btScanQrcode"
            android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
            android:textStyle="bold"
            android:background="#259b3e"
            android:textSize="@dimen/abc_text_size_medium_material" />

    </LinearLayout>

</RelativeLayout>
